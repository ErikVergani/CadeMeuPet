<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:elevation="4dp"
        app:cardCornerRadius="8dp"
        android:background="#222222">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

        <ImageView
                android:id="@+id/img_pet"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:background="#333333"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        <TextView
                android:id="@+id/pet_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status_missing"
                android:textColor="@android:color/white"
                android:background="#D32F2F"
                android:padding="6dp"
                android:textStyle="bold"
                android:textSize="14sp"
                app:layout_constraintTop_toTopOf="@id/img_pet"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="8dp" />

        <TextView
                android:id="@+id/txt_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/hint_pet_name"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/img_pet"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="12dp" />

        <TextView
                android:id="@+id/dt_miss"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/label_missing_at"
                android:textColor="#AAAAAA"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/txt_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp" />

        <Button
                android:id="@+id/btn_found"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/btn_found_pet"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:backgroundTint="#6200EE"
                app:layout_constraintTop_toBottomOf="@id/dt_miss"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

        <!-- Botões para o dono da publicação -->
        <LinearLayout
                android:id="@+id/owner_actions_item_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/dt_miss"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp">

            <Button
                    android:id="@+id/btn_edit_item"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/btn_edit"
                    android:backgroundTint="#FF9800"
                    android:textColor="@android:color/white"
                    android:layout_marginEnd="4dp"/>

            <Button
                    android:id="@+id/btn_delete_item"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/btn_delete"
                    android:backgroundTint="#F44336"
                    android:textColor="@android:color/white"
                    android:layout_marginStart="4dp"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>

